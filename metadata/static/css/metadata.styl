@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,600,700,300");
headerHeight = 55px
headerColor = #5B4282
contentWidth = 70%
searchHeight = 35px

sidebarWidth = 220px
sideBarTransitionTime = 0.2s
sidebarColour = #ECECEC
sidebarIconSize = 35px
sidebarButtonHeight = 50px
/* Here's the compiled CSS */
 
body
  font-family: 'Open Sans', sans-serif;

header#header
	z-index 20
	height: headerHeight
	background: headerColor
	position: absolute
	left:0
	right:0
	top:0
	box-shadow: 0px 3px 7px rgba(100, 100, 100, 0.49);
	text-align: center
	line-height: headerHeight
	a#menu-toggle
		display:block
		float:left
		border-radius:30px
		margin-top: headerHeight * 0.15
		margin-left: headerHeight * 0.15
		height: headerHeight * 0.7
		width: headerHeight * 0.7
		text-align: center
		line-height: headerHeight * 0.75
		font-size: 20px
		color:white
		-webkit-user-select: none;
		transition: 0.3s
		&:hover
			background: rgba(178, 178, 178, 0.26)
		&:active
			background: lightblue;
	
	input#system-search
		border:none
		border-radius:3px;
		display:inline-block
		height: searchHeight
		width: contentWidth
		font-size:14px
		color: white
		padding:0px 20px
		background: rgba(142, 131, 160, 0.34);
		&:hover
			background: rgba(142, 131, 160, 0.7);
		&:focus
			outline:none
		&:active
			background: rgba(142, 131, 160, 1);
			
nav#sidebar
	z-index 19
	position fixed
	box-shadow 0 0 4px rgba(0,0,0,.14),2px 4px 8px rgba(0,0,0,.28)
	min-height 100% - headerHeight
	width sidebarWidth
	background sidebarColour
	bottom 0
	left -1 * sidebarWidth
	top headerHeight
	transition left sideBarTransitionTime ease

	li
		position relative
		list-style-type none
		display block
		margin auto
		width: 90%
		height 68px
		&:not(:last-child)
			border-bottom 1px solid #E5E5E5

	a.sidebarLink
		position absolute
		padding-left 75px
		margin auto
		left 0;	right 0
		top 0; bottom 0
		color #3c3c3c
		display block
		border-radius: 5px;
		height: sidebarButtonHeight;
		line-height: sidebarButtonHeight;
		transition 0.3s
		text-decoration none
		font-weight 600
		
		&:hover
			background-color #e2e2e2 !important
		
		&.projects
			background url("../img/icons/bill.png") no-repeat
			background-position: 15px center
			background-size sidebarIconSize sidebarIconSize
			
		&.staff
			background url("../img/icons/tie.png") no-repeat
			background-position: 15px center
			background-size sidebarIconSize sidebarIconSize
			
		&.contacts
			background url("../img/icons/passport.png") no-repeat
			background-position: 15px center
			background-size sidebarIconSize sidebarIconSize
		
		&.settings
			background url("../img/icons/wrench.png") no-repeat
			background-position: 15px center
			background-size sidebarIconSize sidebarIconSize
			
			
	
.slideIn
	left 0 !important
