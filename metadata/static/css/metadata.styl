headerHeight = 55px
headerColor = #5B4282
contentWidth = 70%
searchHeight = 35px

header#header
	height: headerHeight
	background: headerColor
	position: absolute
	left:0
	right:0
	top:0
	box-shadow: 0px 3px 5px rgba(100, 100, 100, 0.49);
	text-align: center
	line-height: headerHeight
	div#menu-toggle
		float:left
		border-radius:30px
		margin-top: headerHeight * 0.15
		margin-left: headerHeight * 0.15
		height: headerHeight * 0.7
		width: headerHeight * 0.7
		text-align: center
		line-height: headerHeight * 0.75
		font-size: 20px
		color:white
		&:hover
			color: gray
		&:active
			background: lightblue;
	
	input#system-search
		border:none
		border-radius:3px;
		display:inline-block
		height: searchHeight
		width: contentWidth
		font-size:14px
		color: white
		padding:0px 20px
		background: rgba(142, 131, 160, 0.34);
		&:hover
			background: rgba(142, 131, 160, 0.7);
		&:focus
			outline:none
		&:active
			background: rgba(142, 131, 160, 1);
			

	

		
			
